#!/bin/sh /etc/rc.common

START=99
SERVICE_WRITE_PID=1
SERVICE_DAEMONIZE=1

start() {
	logger -t TTYD 'Starting ttyd service'
	IF=br-lan
	ifconfig $IF >/dev/null 2>&1 || IF=eth0
	service_start /usr/bin/ttyd -i $IF /bin/login
	return 0
}

stop() {
	if [ -n "`pidof ttyd`" ]; then
		logger -t TTYD 'Shutting down ttyd service'
		service_stop /usr/bin/ttyd
	fi
	return 0
}

restart() {
	logger -t TTYD 'Restarting ttyd service'
	stop
	sleep 2
	start
}
